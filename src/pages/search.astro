---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
	<head>
		<BaseHead title="Search" description="Search our travel blog" />
		<link href="/pagefind/pagefind-ui.css" rel="stylesheet">
	</head>
	<body>
		<Header />
		<main>
			<article>
				<h1>Search</h1>
				<div id="search"></div>
			</article>
		</main>
		<Footer />

		<script is:inline src="/pagefind/pagefind-ui.js"></script>
		<script is:inline>
			window.addEventListener('DOMContentLoaded', () => {
				new PagefindUI({
					element: '#search',
					showSubResults: true,
					showImages: false,
				});
			});
		</script>
	</body>
</html>

<style is:global>
	#search {
		margin: 2rem 0;
	}
</style>