---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
---

<header>
  <!-- Top Menu Bar -->
  <div class="top-bar">
    <nav class="top-nav">
      <HeaderLink href="/about">About Us</HeaderLink>
      <HeaderLink href="/contact">Contact</HeaderLink>
      <HeaderLink href="/faq">FAQ</HeaderLink>
    </nav>
  </div>

  <!-- Logo Section -->
  <div class="logo-section">
    <a href="/" class="logo">
      <!-- Placeholder for logo - can be replaced with actual logo later -->
      <div class="logo-placeholder">{SITE_TITLE}</div>
    </a>
  </div>

  <!-- Main Menu Bar -->
  <div class="main-bar">
    <nav class="main-nav">
      <HeaderLink href="/search">Search</HeaderLink>
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/destinations">Destinations</HeaderLink>
      <HeaderLink href="/categories">Categories</HeaderLink>
      <HeaderLink href="/shop">Shop</HeaderLink>
      <HeaderLink href="/subscribe">Subscribe</HeaderLink>
    </nav>
  </div>
</header>

<style>
  header {
    margin: 0;
    padding: 0;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }

  /* Top Bar Styles */
  .top-bar {
    background: #f8f9fa;
    border-bottom: 1px solid #e9ecef;
    padding: 0.5rem 1rem;
  }

  .top-nav {
    display: flex;
    justify-content: flex-end;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Logo Section */
  .logo-section {
    padding: 1rem;
    text-align: center;
    border-bottom: 1px solid #e9ecef;
  }

  .logo {
    text-decoration: none;
    color: inherit;
  }

  .logo-placeholder {
    font-size: 2rem;
    font-weight: bold;
    color: var(--accent, #2563eb);
    padding: 0.5rem;
    border: 2px dashed #ccc;
    border-radius: 8px;
    display: inline-block;
    min-width: 200px;
  }

  /* Main Menu Bar */
  .main-bar {
    padding: 0 1rem;
  }

  .main-nav {
    display: flex;
    justify-content: center;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Link Styles */
  .top-nav :global(a),
  .main-nav :global(a) {
    padding: 1rem 0.5rem;
    color: var(--black, #333);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
    border-bottom: 3px solid transparent;
  }

  .top-nav :global(a:hover),
  .main-nav :global(a:hover) {
    color: var(--accent, #2563eb);
  }

  .main-nav :global(a.active) {
    border-bottom-color: var(--accent, #2563eb);
    color: var(--accent, #2563eb);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .top-nav {
      justify-content: center;
      gap: 1rem;
    }

    .main-nav {
      flex-wrap: wrap;
      gap: 1rem;
      justify-content: center;
    }

    .main-nav :global(a),
    .top-nav :global(a) {
      padding: 0.75rem 0.25rem;
      font-size: 0.9rem;
    }

    .logo-placeholder {
      font-size: 1.5rem;
      min-width: 150px;
    }
  }

  @media (max-width: 480px) {
    .top-nav {
      gap: 0.5rem;
    }

    .main-nav {
      gap: 0.5rem;
    }

    .main-nav :global(a),
    .top-nav :global(a) {
      padding: 0.5rem 0.25rem;
      font-size: 0.8rem;
    }
  }
</style>
